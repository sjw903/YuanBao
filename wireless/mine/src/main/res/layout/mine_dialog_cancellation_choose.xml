<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_20"
    android:background="@drawable/shape_gradient_bg_white_10"
    android:orientation="vertical">

    <ListView
        android:id="@+id/dialog_lis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@color/colorE4E4E4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/colorAAAAAA"
            android:textSize="@dimen/text_16" />

        <View
            android:id="@+id/view_line"
            android:layout_width="@dimen/margin_1"
            android:layout_height="match_parent"
            android:background="@color/colorE4E4E4" />

        <TextView
            android:id="@+id/tv_define"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorEA5504"
            android:textSize="@dimen/text_16" />

    </LinearLayout>

</LinearLayout>