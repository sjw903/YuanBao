<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/order_item_iv_group"
        android:layout_width="@dimen/margin_16"
        android:layout_centerVertical="true"
        android:layout_height="@dimen/margin_16"
        android:src="@mipmap/icon_all_bill_group" />

    <TextView
        android:id="@+id/order_item_tv_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_4"
        android:layout_toEndOf="@id/order_item_iv_group"
        android:textColor="@color/bill_item_title"
        android:textSize="@dimen/margin_13"
        tools:text="拼团专区" />

    <TextView
        android:id="@+id/order_item_tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/colorFB8C00"
        android:textSize="@dimen/margin_11"
        tools:text="等待付款" />

</RelativeLayout>