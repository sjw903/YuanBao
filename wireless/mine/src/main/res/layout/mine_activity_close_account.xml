<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".setting.account.close.CloseAccountActivity">

    <com.yuanbaogo.zui.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleName="@string/close_title" />

    <ImageView
        android:layout_width="@dimen/margin_48"
        android:layout_height="@dimen/margin_48"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_20"
        android:src="@mipmap/icon_close_tip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_11"
        android:text="@string/close_tip"
        android:textColor="@color/wing_title"
        android:textSize="@dimen/wing_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_21"
        android:layout_marginTop="@dimen/margin_21"
        android:text="@string/close_note1"
        android:textColor="@color/wing_sub_title_hint"
        android:textSize="@dimen/wing_sub_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_21"
        android:layout_marginTop="@dimen/margin_21"
        android:text="@string/close_note2"
        android:textColor="@color/wing_sub_title_hint"
        android:textSize="@dimen/wing_sub_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/close_tv_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_48"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_40"
            android:text="@string/close_next"
            android:textColor="@color/wing_selected_btn_text"
            android:textSize="@dimen/wing_selected_btn"
            android:background="@drawable/icon_close_next_btn_bg" />

    </RelativeLayout>

</LinearLayout>