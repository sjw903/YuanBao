<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/after_order_rl_good"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_20"
    android:layout_marginBottom="@dimen/margin_15"
    android:minHeight="88dp"
    android:orientation="vertical">

    <com.yuanbaogo.zui.view.RoundImageView
        android:id="@+id/after_order_iv_img"
        android:layout_width="88dp"
        android:layout_height="88dp"
        app:radius="@dimen/margin_4" />

    <LinearLayout
        android:id="@+id/after_order_ll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/after_order_iv_img"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/after_order_tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_9"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/wing_title"
            android:textSize="@dimen/wing_sub_title"
            tools:text="超大力生枣随身点点滴滴点点滴滴点点滴滴点点滴滴点点滴滴点点滴滴的袋" />

        <TextView
            android:id="@+id/after_order_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/wing_selected_btn_text"
            android:textSize="@dimen/wing_title"
            tools:text="¥ 12.90" />

    </LinearLayout>

    <TextView
        android:id="@+id/after_order_tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/after_order_ll_info"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/margin_9"
        android:layout_marginTop="@dimen/margin_5"
        android:textColor="@color/wing_sub_title_hint"
        android:textSize="@dimen/wing_sub_title"
        tools:text="×1" />

    <TextView
        android:id="@+id/after_order_tv_size"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_17"
        android:layout_below="@id/after_order_ll_info"
        android:layout_marginStart="@dimen/margin_9"
        android:layout_marginTop="@dimen/margin_3"
        android:layout_toEndOf="@id/after_order_iv_img"
        android:enabled="true"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/wing_sub_title_hint"
        android:textSize="@dimen/margin_11"
        tools:text="18码; 黄蓝撞色" />


</RelativeLayout>