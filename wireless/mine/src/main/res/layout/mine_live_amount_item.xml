<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/margin_10"
    android:background="@drawable/bg_ffffff_radius8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_60"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/live_item_head_img"
            android:layout_width="@dimen/margin_28"
            android:layout_height="@dimen/margin_28"
            android:src="@mipmap/icon_video_default_head"
            android:layout_marginStart="@dimen/margin_10"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/margin_10">

            <TextView
                android:id="@+id/live_item_user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_11"
                android:text="胡乱开着玩"
                android:textColor="@color/color424242"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/live_item_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021-3-4 13:30-12:22"
                android:textSize="@dimen/text_12"
                android:textColor="@color/color999999"
                android:layout_marginTop="@dimen/margin_2"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/live_item_commerce_iv"
            android:layout_width="@dimen/margin_51"
            android:layout_height="@dimen/margin_21"
            android:src="@mipmap/icon_commerce"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@color/colorE4E4E4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_70"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/live_item_charm_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textSize="@dimen/text_16"
                android:textColor="@color/color212121"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="魅力值"
                android:textSize="@dimen/text_12"
                android:textColor="@color/colorAAAAAA"
                android:layout_marginTop="@dimen/margin_7"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/live_item_watch_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="@dimen/text_16"
                android:textColor="@color/color212121"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="观看人数"
                android:textSize="@dimen/text_12"
                android:textColor="@color/colorAAAAAA"
                android:layout_marginTop="@dimen/margin_7"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/live_item_add_fans_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="@dimen/text_16"
                android:textColor="@color/color212121"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新增粉丝"
                android:textSize="@dimen/text_12"
                android:textColor="@color/colorAAAAAA"
                android:layout_marginTop="@dimen/margin_7"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/live_item_commerce_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_70"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/live_item_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textSize="@dimen/text_16"
                android:textColor="@color/color212121"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单数"
                android:textSize="@dimen/text_12"
                android:textColor="@color/colorAAAAAA"
                android:layout_marginTop="@dimen/margin_7"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/live_item_transaction_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="@dimen/text_16"
                android:textColor="@color/color212121"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单交易总额"
                android:textSize="@dimen/text_12"
                android:textColor="@color/colorAAAAAA"
                android:layout_marginTop="@dimen/margin_7"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/live_item_income_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="@dimen/text_16"
                android:textColor="@color/color212121"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预计收入(元)"
                android:textSize="@dimen/text_12"
                android:textColor="@color/colorAAAAAA"
                android:layout_marginTop="@dimen/margin_7"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>