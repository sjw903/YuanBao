<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_item_ll_pay"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_170"
    android:layout_marginHorizontal="@dimen/margin_10"
    android:layout_marginTop="@dimen/margin_10"
    android:background="@drawable/icon_address_item_bg"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/margin_10"
    android:paddingTop="@dimen/margin_10">

    <!--头部-->
    <include layout="@layout/mine_layout_order_header" />

    <!--商品集合-->
    <include layout="@layout/mine_layout_order_goods" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_20">

        <TextView
            android:id="@+id/order_item_tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/order_btn_cancel"
            android:textColor="@color/wing_sub_title_hint"
            android:textSize="@dimen/wing_sub_title" />

        <TextView
            android:id="@+id/order_item_tv_pay"
            android:layout_width="@dimen/margin_90"
            android:layout_height="@dimen/margin_36"
            android:layout_alignParentEnd="true"
            android:background="@drawable/icon_address_add"
            android:gravity="center"
            android:text="@string/order_item_pay"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_15" />

        <TextView
            android:id="@+id/order_item_tv_address"
            android:layout_width="@dimen/margin_90"
            android:layout_height="@dimen/margin_36"
            android:layout_marginEnd="@dimen/margin_10"
            android:background="@drawable/icon_all_bill_item_btn_normal_bg"
            android:gravity="center"
            android:layout_toStartOf="@id/order_item_tv_pay"
            android:text="修改地址"
            android:textColor="@color/wing_sub_title"
            android:textSize="@dimen/margin_13" />

    </RelativeLayout>

</LinearLayout>