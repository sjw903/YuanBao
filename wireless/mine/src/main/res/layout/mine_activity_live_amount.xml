<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".live.view.LiveAmountActivity"
    android:orientation="vertical"
    tools:ignore="ResourceName">

    <com.yuanbaogo.zui.view.TitleBar
        android:id="@+id/live_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleName="@string/live_amount" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tl_live"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_44"
        android:layout_centerInParent="true"
        tl:tl_indicator_color="@color/colorEA5504"
        tl:tl_indicator_height="1dp"
        tl:tl_indicator_width="@dimen/margin_30"
        android:paddingTop="@dimen/margin_7"
        android:paddingBottom="@dimen/margin_7"
        tl:tl_textBold="SELECT"
        app:tl_textSelectColor="@color/colorEA5504"
        app:tl_textUnselectColor="@color/color666666"
        tl:tl_textsize="@dimen/text_16"
        tl:tl_underline_gravity="BOTTOM"
        android:background="@color/colorFFFFFF"
        app:tl_tab_space_equal="true"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/live_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorF6F6F6"/>

</LinearLayout>