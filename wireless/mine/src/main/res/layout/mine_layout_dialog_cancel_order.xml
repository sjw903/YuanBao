<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_390"
    android:layout_gravity="bottom"
    android:background="@drawable/icon_order_cancel_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/order_dl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="@dimen/margin_13"
        android:text="@string/order_dialog_cancel_title"
        android:textColor="@color/wing_sub_title"
        android:textSize="@dimen/wing_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_36"
        android:layout_marginHorizontal="@dimen/margin_10"
        android:background="@drawable/icon_order_cancel_dialog_tip_bg"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/margin_10"
        android:text="@string/order_dialog_tip"
        android:textColor="@color/wing_title"
        android:textSize="@dimen/wing_sub_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_18"
        android:gravity="center_vertical"
        android:text="@string/order_dialog_reason"
        android:textColor="@color/wing_sub_title_hint"
        android:textSize="@dimen/wing_sub_title" />

    <RadioGroup
        android:id="@+id/order_dl_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/order_dl_rb1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_34"
            android:button="@drawable/icon_radio_button"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/margin_5"
            android:text="@string/order_dialog_reason1"
            android:textColor="@color/wing_sub_title"
            android:textSize="@dimen/wing_sub_title"
            app:buttonCompat="@drawable/icon_radio_button" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/order_dl_rb2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_34"
            android:button="@drawable/icon_radio_button"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/margin_5"
            android:text="@string/order_dialog_reason2"
            android:textColor="@color/wing_sub_title"
            android:textSize="@dimen/wing_sub_title"
            app:buttonCompat="@drawable/icon_radio_button" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/order_dl_rb3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_34"
            android:button="@drawable/icon_radio_button"
            android:gravity="center_vertical"
            android:includeFontPadding="true"
            android:paddingHorizontal="@dimen/margin_5"
            android:text="@string/order_dialog_reason3"
            android:textColor="@color/wing_sub_title"
            android:textSize="@dimen/wing_sub_title"
            app:buttonCompat="@drawable/icon_radio_button" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/order_dl_rb4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_34"
            android:button="@drawable/icon_radio_button"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/margin_5"
            android:text="@string/order_dialog_reason4"
            android:textColor="@color/wing_sub_title"
            android:textSize="@dimen/wing_sub_title"
            app:buttonCompat="@drawable/icon_radio_button" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/order_dl_rb5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_34"
            android:button="@drawable/icon_radio_button"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/margin_5"
            android:text="@string/order_dialog_reason5"
            android:textColor="@color/wing_sub_title"
            android:textSize="@dimen/wing_sub_title"
            app:buttonCompat="@drawable/icon_radio_button" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_25"
        android:layout_marginBottom="@dimen/margin_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_dl_not_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_40"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_weight="1"
            android:background="@drawable/icon_address_add"
            android:gravity="center"
            android:text="@string/order_dialog_not_cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/wing_selected_btn" />

        <TextView
            android:id="@+id/order_dl_next_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_40"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_weight="1"
            android:background="@drawable/icon_order_cancel_dialog_btn_bg"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/order_dialog_next_cancel"
            android:textColor="@color/icon_order_cancel_dialog_btn_text"
            android:textSize="@dimen/wing_selected_btn" />

    </LinearLayout>

</LinearLayout>