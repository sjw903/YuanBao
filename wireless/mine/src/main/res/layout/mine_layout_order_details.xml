<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_10"
    android:layout_marginTop="@dimen/margin_10"
    android:background="@drawable/icon_address_item_bg"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/margin_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_36"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wait_pay_code"
            android:textColor="@color/wing_sub_title"
            android:textSize="@dimen/wing_sub_title" />

        <TextView
            android:id="@+id/order_tv_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/wait_pay_copy"
            android:textColor="@color/wing_selected_title"
            android:textSize="@dimen/wing_sub_title" />

        <TextView
            android:id="@+id/order_tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_toStartOf="@id/order_tv_copy"
            android:textColor="@color/wing_title"
            android:textSize="@dimen/wing_sub_title"
            android:textStyle="bold"
            tools:text="YBG20210915000001" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_36"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wait_pay_time"
            android:textColor="@color/wing_sub_title"
            android:textSize="@dimen/wing_sub_title" />

        <TextView
            android:id="@+id/order_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/margin_10"
            android:textColor="@color/wing_title"
            android:textSize="@dimen/wing_sub_title"
            android:textStyle="bold"
            tools:text="2021-09-15 14:36" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_36"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wait_pay_method"
            android:textColor="@color/wing_sub_title"
            android:textSize="@dimen/wing_sub_title" />

        <TextView
            android:id="@+id/order_tv_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/margin_10"
            android:textColor="@color/wing_title"
            android:textSize="@dimen/wing_sub_title"
            android:textStyle="bold"
            tools:text="在线支付" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/order_rl_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_36"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wait_pay_date"
            android:textColor="@color/wing_sub_title"
            android:textSize="@dimen/wing_sub_title" />

        <TextView
            android:id="@+id/order_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/margin_10"
            android:textColor="@color/wing_title"
            android:textSize="@dimen/wing_sub_title"
            android:textStyle="bold"
            tools:text="2021-09-15 15:31" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_36"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wait_pay_total"
            android:textColor="@color/wing_sub_title"
            android:textSize="@dimen/wing_sub_title" />

        <TextView
            android:id="@+id/order_tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/margin_10"
            android:textColor="@color/wing_title"
            android:textSize="@dimen/wing_sub_title"
            android:textStyle="bold"
            tools:text="¥ 89.0" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_36"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wait_pay_freight"
            android:textColor="@color/wing_sub_title"
            android:textSize="@dimen/wing_sub_title" />

        <TextView
            android:id="@+id/order_tv_freight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/margin_10"
            android:textColor="@color/wing_title"
            android:textSize="@dimen/wing_sub_title"
            android:textStyle="bold"
            android:text="¥ 0" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_36"
        android:gravity="end|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_tv_money_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wait_pay_money_details"
            android:textColor="@color/wing_sub_title"
            android:textSize="@dimen/wing_sub_title" />


        <TextView
            android:id="@+id/order_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/wing_selected_title"
            android:textSize="@dimen/wing_sub_title"
            tools:text=" ¥ 89.0" />

    </LinearLayout>

</LinearLayout>