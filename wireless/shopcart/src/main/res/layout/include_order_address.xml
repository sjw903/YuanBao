<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_shop_cart_confirm_order_address_rl_address"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10"
    android:background="@drawable/shape_gradient_bg_white_10">

    <TextView
        android:id="@+id/item_shop_cart_confirm_order_address_tv_no"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_110"
        android:layout_margin="@dimen/margin_10"
        android:drawableRight="@mipmap/icon_login_join"
        android:gravity="center_vertical"
        android:text="还没有收货地址哦"
        android:textColor="@color/color212121"
        android:textSize="@dimen/text_16"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/item_shop_cart_confirm_order_address_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_9"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_17"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_shop_cart_confirm_order_address_tv_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_gradient_bg_ffab91_50"
                android:paddingLeft="@dimen/margin_7"
                android:paddingTop="@dimen/margin_2"
                android:paddingRight="@dimen/margin_7"
                android:paddingBottom="@dimen/margin_2"
                android:text="默认"
                android:textColor="@color/colorFFFFFF"
                android:textSize="@dimen/text_9" />

            <TextView
                android:id="@+id/item_shop_cart_confirm_order_address_tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_toRightOf="@id/item_shop_cart_confirm_order_address_tv_default"
                android:text="天津市东丽区"
                android:textColor="@color/color424242"
                android:textSize="@dimen/text_13" />

            <TextView
                android:id="@+id/item_shop_cart_confirm_order_address_tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_shop_cart_confirm_order_address_tv_area"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_20"
                android:text="大厂路9号压铸校园1-1-102"
                android:textColor="@color/color212121"
                android:textSize="@dimen/text_16" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_shop_cart_confirm_order_address_tv_detail"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_shop_cart_confirm_order_address_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张先生"
                    android:textColor="@color/color212121"
                    android:textSize="@dimen/text_13" />

                <TextView
                    android:id="@+id/item_shop_cart_confirm_order_address_tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="186****8200"
                    android:textColor="@color/color424242"
                    android:textSize="@dimen/text_12" />

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/margin_24"
            android:layout_height="@dimen/margin_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_3"
            android:padding="@dimen/margin_5"
            android:src="@mipmap/icon_login_join" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_2"
        android:layout_below="@id/item_shop_cart_confirm_order_address_rl"
        android:background="@mipmap/icon_address_item_line" />

</RelativeLayout>