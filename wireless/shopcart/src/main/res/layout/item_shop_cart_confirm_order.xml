<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_90"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_15">

        <ImageView
            android:id="@+id/item_shop_cart_child_img_goods"
            android:layout_width="@dimen/margin_90"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:background="@color/colorCCCCCC" />

        <LinearLayout
            android:id="@+id/item_shop_cart_child_ll_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toRightOf="@id/item_shop_cart_child_img_goods"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_shop_cart_child_tv_goods_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:text="商品名称"
                android:textColor="@color/color212121"
                android:textSize="@dimen/text_13" />

            <TextView
                android:id="@+id/item_shop_cart_child_tv_reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_10"
                android:text="x 1"
                android:textColor="@color/colorAAAAAA"
                android:textSize="@dimen/text_13" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_shop_cart_child_tv_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_shop_cart_child_ll_goods"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_toRightOf="@id/item_shop_cart_child_img_goods"
            android:text="规格"
            android:textColor="@color/colorAAAAAA"
            android:textSize="@dimen/text_13" />

        <TextView
            android:id="@+id/item_shop_cart_child_tv_price_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toRightOf="@id/item_shop_cart_child_img_goods"
            android:gravity="bottom"
            android:text="当前价格"
            android:textColor="@color/colorEA5504"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>