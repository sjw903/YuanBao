<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_lucky_fight_share_view_rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAAAAAA">

    <RelativeLayout
        android:id="@+id/dialog_share_view_rl_share_save_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/dialog_share_view_rl_share"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/dialog_share_view_rl_share_save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@mipmap/icon_lucky_fight_share_bg"
            android:padding="@dimen/margin_10">

            <RelativeLayout
                android:id="@+id/dialog_share_view_rl_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@mipmap/icon_lucky_fight_share_time_bg">

                <TextView
                    android:id="@+id/dialog_lucky_fight_share_view_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="抽奖时间：\n11-09 11:00"
                    android:textColor="@color/colorFFFFFF" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dialog_lucky_fight_share_view_rl_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:id="@+id/dialog_lucky_fight_share_view_img_qr"
                    android:layout_width="@dimen/margin_80"
                    android:layout_height="@dimen/margin_80"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:background="@drawable/shape_gradient_bg_white_50"/>

                <TextView
                    android:id="@+id/dialog_lucky_fight_share_view_tv_qr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dialog_lucky_fight_share_view_img_qr"
                    android:layout_centerInParent="true"
                    android:text="长按识别查看"
                    android:textColor="@color/color212121"
                    android:textSize="@dimen/text_13" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dialog_lucky_fight_share_view_rl_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_bg_white_10">

                <ImageView
                    android:id="@+id/dialog_lucky_fight_share_view_img_logo"
                    android:layout_width="@dimen/margin_190"
                    android:layout_height="@dimen/margin_190"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/shape_bg_faede7_10"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/dialog_lucky_fight_share_view_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dialog_lucky_fight_share_view_img_logo"
                    android:layout_margin="@dimen/margin_10"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="Keep 家用智能跑步机K1 专业减震静音 双倍燃脂不伤膝 送货上门包安装"
                    android:textColor="@color/color212121"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:id="@+id/dialog_lucky_fight_share_view_tv_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dialog_lucky_fight_share_view_tv_title"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:background="@drawable/shape_gradient_bg_red_50"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingTop="@dimen/margin_3"
                    android:paddingRight="@dimen/margin_10"
                    android:paddingBottom="@dimen/margin_3"
                    android:text="全民拼团"
                    android:textColor="@color/colorEA5504"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:id="@+id/dialog_lucky_fight_share_view_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dialog_lucky_fight_share_view_tv_title"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:layout_toRightOf="@id/dialog_lucky_fight_share_view_tv_label"
                    android:text="¥1999"
                    android:textColor="@color/color212121"
                    android:textSize="@dimen/text_20" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/dialog_share_view_img_share_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialog_share_view_rl_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_gradient_top_bg_white_10">

        <LinearLayout
            android:id="@+id/dialog_share_view_ll_share"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_115"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_share_view_tv_wechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/icon_share_wechat"
                android:drawablePadding="@dimen/margin_10"
                android:gravity="center"
                android:text="微信"
                android:textColor="@color/color424242"
                android:textSize="@dimen/text_12" />

            <TextView
                android:id="@+id/item_share_view_tv_wechat_circle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/icon_share_moments"
                android:drawablePadding="@dimen/margin_10"
                android:gravity="center"
                android:text="朋友圈"
                android:textColor="@color/color424242"
                android:textSize="@dimen/text_12" />

        </LinearLayout>

        <View
            android:id="@+id/dialog_share_view_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/dialog_share_view_ll_share"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:background="@color/colorD8D8D8" />

        <TextView
            android:id="@+id/dialog_share_view_tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_70"
            android:layout_below="@id/dialog_share_view_line"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color222222"
            android:textSize="@dimen/text_15" />

    </RelativeLayout>

</RelativeLayout>