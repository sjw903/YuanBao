<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_10"
    android:background="@color/colorFFFFFF"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_10">

    <TextView
        android:id="@+id/item_shop_product_details_parameter_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_50"
        android:gravity="center"
        android:text="商品参数"
        android:textColor="@color/color212121"
        android:textSize="@dimen/text_14" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_shop_product_details_parameter_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/item_shop_product_details_parameter_cb_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:layout_below="@id/item_shop_product_details_comment_recycler"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@null"
        android:button="@null"
        android:gravity="center"
        android:text="查看全部"
        android:textColor="@color/color358CFF"
        android:textSize="@dimen/text_12" />

</LinearLayout>