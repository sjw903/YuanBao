<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_180"
    android:paddingLeft="@dimen/margin_10"
    android:id="@+id/item_shop_spick_rl"
    android:paddingTop="@dimen/margin_10"
    android:paddingRight="@dimen/margin_10">

    <ImageView
        android:id="@+id/item_shop_spick_img"
        android:layout_width="@dimen/margin_180"
        android:layout_height="match_parent"
        android:background="@color/colorCCCCCC" />

    <ImageView
        android:layout_width="@dimen/margin_75"
        android:layout_height="@dimen/margin_35"
        android:layout_marginLeft="@dimen/margin_3"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/colorFFFFFF" />

    <TextView
        android:id="@+id/item_shop_spick_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_toRightOf="@id/item_shop_spick_img"
        android:text="商品名字"
        android:textColor="@color/color424242"
        android:textSize="@dimen/text_20"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_shop_spick_tv_specialty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_shop_spick_tv_name"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_toRightOf="@id/item_shop_spick_img"
        android:text="特产 山东-枣庄"
        android:textColor="@color/color999999"
        android:textSize="@dimen/text_13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_shop_spick_tv_specialty"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_toRightOf="@id/item_shop_spick_img"
        android:text="￥ 9999.99"
        android:textColor="@color/color999999"
        android:textSize="@dimen/text_13" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_toRightOf="@id/item_shop_spick_img"
        android:background="@drawable/shape_bg_fd995b_to_f46e35">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="￥ 99999.99"
            android:textColor="@color/colorFFFFFF"
            android:textSize="@dimen/text_18" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_bg_f13c6f_to_be3da9_toff6b05">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_3"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@drawable/shape_gradient_bg_white_50"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_10"
                android:paddingTop="@dimen/margin_3"
                android:paddingRight="@dimen/margin_10"
                android:paddingBottom="@dimen/margin_3"
                android:text="马上抢"
                android:textColor="@color/colorEA5504"
                android:textSize="@dimen/text_13" />


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>