<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_shop_product_details_sort_rl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/margin_5">

    <ImageView
        android:id="@+id/item_shop_product_details_sort_img"
        android:layout_width="@dimen/margin_55"
        android:layout_height="@dimen/margin_55"
        android:layout_centerInParent="true"
        android:src="@color/colorF6F6F6" />

    <TextView
        android:id="@+id/item_shop_product_details_sort_tv"
        android:layout_width="@dimen/margin_55"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/margin_5"
        android:text="共4种颜色分类可选"
        android:textColor="@color/color999999"
        android:textSize="@dimen/text_9"
        android:visibility="gone" />

</RelativeLayout>