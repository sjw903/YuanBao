<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_bring_goods_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_23"
    android:background="@drawable/shape_gradient_bg_white_10">

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16"
        android:text="1"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:textColor="@color/color999999"
        android:textSize="16dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_head_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_toRightOf="@id/tv_number"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/margin_38"
            android:layout_height="@dimen/margin_38"
            android:src="@mipmap/icon_live_like_orange" />

        <ImageView
            android:id="@+id/iv_add_follow"
            android:visibility="gone"
            android:layout_width="@dimen/margin_18"
            android:layout_height="@dimen/margin_18"
            android:layout_marginTop="-10dp"
            android:layout_alignBottom="@+id/ll_head_view"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/add_follow" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_14"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_toRightOf="@id/ll_head_view"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:lines="2"
        android:text="网红网红"
        android:textColor="@color/color424242"
        android:textSize="@dimen/margin_14"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_43"
        android:text="3000"
        android:textColor="@color/color424242"
        android:textSize="@dimen/margin_14" />


</RelativeLayout>