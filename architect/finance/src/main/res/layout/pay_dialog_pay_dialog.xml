<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_53"
    android:background="@drawable/shape_gradient_bg_white_10"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_18"
        android:layout_marginTop="@dimen/margin_18"
        android:layout_marginBottom="@dimen/margin_25"
        android:text="@string/pay_dialog_title"
        android:textColor="@color/close_reason"
        android:textSize="@dimen/wing_selected_btn"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_18"
        android:layout_marginBottom="@dimen/margin_40"
        android:text="@string/pay_dialog_content"
        android:textColor="@color/wing_sub_title"
        android:textSize="@dimen/wing_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@color/colorE4E4E4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pay_dialog_not_open"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/pay_dialog_not_open"
            android:textColor="@color/wing_sub_title_hint"
            android:textSize="@dimen/wing_title" />

        <View
            android:layout_width="@dimen/margin_1"
            android:layout_height="match_parent"
            android:background="@color/colorE4E4E4" />

        <TextView
            android:id="@+id/pay_dialog_keep_on"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/pay_dialog_keep_on"
            android:textColor="@color/wing_selected_title"
            android:textSize="@dimen/wing_title" />

    </LinearLayout>

</LinearLayout>