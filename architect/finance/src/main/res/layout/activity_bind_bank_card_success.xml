<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".bindBankCard.view.BindBankCardSuccessActivity"
    tools:ignore="ResourceName">

    <com.yuanbaogo.zui.view.TitleBar
        android:id="@+id/bind_success_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleName="绑定银行卡" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="153dp"
        android:src="@mipmap/icon_bind_success"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="41dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定成功"
        android:textSize="@dimen/text_20"
        android:textColor="@color/color212121"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_26"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_15"
        android:textColor="@color/colorAAAAAA"
        android:text="即将返回我的资产，请稍等"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_10"/>

    <TextView
        android:id="@+id/bind_success_countdown_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="@dimen/text_30"
        android:textColor="@color/colorE4E4E4"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_10"/>

</LinearLayout>