<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_50"
    android:background="@drawable/shape_gradient_bg_white_10">

    <TextView
        android:id="@+id/dialog_confirm_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_35"
        android:layout_marginBottom="@dimen/margin_35"
        android:text="是否清空历史记录"
        android:textColor="@color/color212121"
        android:textSize="@dimen/text_16"
        android:textStyle="bold"
        android:gravity="center_horizontal"/>

    <View
        android:id="@+id/dialog_confirm_view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:layout_below="@id/dialog_confirm_view_title"
        android:background="@color/colorE4E4E4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_60"
        android:layout_below="@id/dialog_confirm_view_line"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_confirm_view_tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/colorAAAAAA"
            android:textSize="@dimen/text_16" />

        <View
            android:layout_width="@dimen/margin_1"
            android:layout_height="match_parent"
            android:background="@color/colorE4E4E4" />

        <TextView
            android:id="@+id/dialog_confirm_view_tv_determine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorEA5504"
            android:textSize="@dimen/text_16" />

    </LinearLayout>

</RelativeLayout>