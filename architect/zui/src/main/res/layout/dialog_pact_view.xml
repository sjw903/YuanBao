<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_390"
    android:layout_margin="@dimen/margin_50"
    android:background="@drawable/shape_gradient_bg_white_10"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_pact_view_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_20"
            android:text="规则说明"
            android:textColor="@color/color212121"
            android:textSize="@dimen/text_16" />

        <ImageView
            android:id="@+id/dialog_pact_view_img_cancel"
            android:layout_width="@dimen/margin_20"
            android:layout_height="@dimen/margin_20"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin_10"
            android:src="@mipmap/icon_search_delete_item" />

    </RelativeLayout>

    <com.yuanbaogo.zui.scrollview.ObservableScrollView
        android:id="@+id/dialog_pact_view_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_weight="1"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialog_pact_view_tv_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/margin_10"
                android:lineSpacingMultiplier="1.5"
                android:text="1.此商品链接均为您购物车中的商品链接"
                android:textColor="@color/color212121"
                android:textSize="@dimen/text_13" />

        </RelativeLayout>

    </com.yuanbaogo.zui.scrollview.ObservableScrollView>

    <View
        android:id="@+id/dialog_pact_view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@color/colorE4E4E4" />

    <LinearLayout
        android:id="@+id/dialog_pact_view_ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_pact_view_tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color6A6A6A"
            android:textSize="@dimen/text_16" />

        <View
            android:id="@+id/dialog_pact_view_line2"
            android:layout_width="@dimen/margin_1"
            android:layout_height="match_parent"
            android:background="@color/colorE4E4E4" />

        <TextView
            android:id="@+id/dialog_pact_view_tv_determine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorEA5504"
            android:textSize="@dimen/text_16" />

    </LinearLayout>

</LinearLayout>