<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_mine_funct_rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/dialog_mine_funct_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_50"
        android:background="@drawable/shape_left_bg_white">

        <RelativeLayout
            android:id="@+id/dialog_mine_funct_rl_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialog_mine_funct_tv_report"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_60"
                android:layout_marginLeft="@dimen/margin_20"
                android:drawableLeft="@mipmap/icon_mine_funct_report"
                android:drawablePadding="@dimen/margin_10"
                android:gravity="center"
                android:text="举报"
                android:textColor="@color/color212121"
                android:textSize="@dimen/text_16" />

            <ImageView
                android:id="@+id/dialog_mine_funct_img_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_60"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_toRightOf="@id/dialog_mine_funct_tv_report"
                android:src="@mipmap/icon_login_join" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>