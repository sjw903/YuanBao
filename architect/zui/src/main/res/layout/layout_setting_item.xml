<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/margin_15"
    android:paddingBottom="@dimen/margin_15">

    <TextView
        android:id="@+id/setting_tv_name"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/setting_item_start_margin"
        android:layout_weight="1"
        android:textColor="@color/title_bar_text_color"
        android:textSize="@dimen/setting_item_name_text_size"
        tools:text="标题" />

    <TextView
        android:id="@+id/setting_tv_sub_name"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="@color/common_sub_title"
        android:textSize="@dimen/common_clear_text_size"
        tools:text="副标题" />

    <ImageView
        android:layout_width="@dimen/setting_item_right_width"
        android:layout_height="@dimen/setting_item_right_height"
        android:layout_marginEnd="@dimen/setting_item_end_margin"
        android:src="@mipmap/icon_setting_right" />

</LinearLayout>