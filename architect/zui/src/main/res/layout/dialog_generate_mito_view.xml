<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/dialog_share_view_rl_share_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/dialog_share_view_rl_share"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_20"
        android:background="@mipmap/icon_generate_mito_bg">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/margin_15">

            <ImageView
                android:id="@+id/dialog_share_view_img_qr"
                android:layout_width="@dimen/margin_75"
                android:layout_height="@dimen/margin_75"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dialog_share_view_img_qr"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_20"
                android:text="长按识别二维码"
                android:textColor="@color/color212121"
                android:textSize="@dimen/text_12" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialog_share_view_rl_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_gradient_top_bg_white_10">

        <LinearLayout
            android:id="@+id/dialog_share_view_ll_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_share_view_tv_wechat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:drawableTop="@mipmap/icon_share_wechat"
                android:drawablePadding="@dimen/margin_8"
                android:gravity="center"
                android:paddingTop="@dimen/margin_10"
                android:text="微信"
                android:textColor="@color/color424242"
                android:textSize="@dimen/text_12" />

            <TextView
                android:id="@+id/item_share_view_tv_wechat_circle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:drawableTop="@mipmap/icon_share_moments"
                android:drawablePadding="@dimen/margin_8"
                android:gravity="center"
                android:paddingTop="@dimen/margin_10"
                android:text="朋友圈"
                android:textColor="@color/color424242"
                android:textSize="@dimen/text_12" />

            <TextView
                android:id="@+id/item_share_view_tv_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:drawableTop="@mipmap/icon_share_save"
                android:drawablePadding="@dimen/margin_8"
                android:gravity="center"
                android:paddingTop="@dimen/margin_10"
                android:text="保存"
                android:textColor="@color/color424242"
                android:textSize="@dimen/text_12" />

        </LinearLayout>

        <View
            android:id="@+id/dialog_share_view_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/dialog_share_view_ll_share"
            android:layout_margin="@dimen/margin_10"
            android:background="@color/colorD8D8D8" />

        <TextView
            android:id="@+id/dialog_share_view_tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_share_view_line"
            android:layout_marginBottom="@dimen/margin_20"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color222222"
            android:textSize="@dimen/text_15" />

    </RelativeLayout>

</RelativeLayout>