<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_sort_view_rl"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/margin_48"
    android:layout_marginTop="@dimen/margin_10"
    android:layout_marginRight="@dimen/margin_5"
    android:background="@drawable/shape_bg_f6f6f6_5">

    <ImageView
        android:id="@+id/item_sort_view_img_color"
        android:layout_width="@dimen/margin_45"
        android:layout_height="@dimen/margin_45"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_2"
        android:scaleType="fitXY"
        android:src="@color/colorE4E4E4" />

    <TextView
        android:id="@+id/item_sort_view_tv_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_toRightOf="@id/item_sort_view_img_color"
        android:background="@drawable/shape_bg_f6f6f6_5"
        android:text="0261公主马卡龙粉"
        android:textColor="@color/color212121"
        android:textSize="@dimen/text_12" />

</RelativeLayout>