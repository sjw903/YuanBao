<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="@dimen/margin_57"
        android:layout_height="@dimen/margin_51"
        android:background="@mipmap/bg_half_circle">

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_video_list_head"
        android:layout_width="@dimen/margin_55"
        android:layout_height="@dimen/margin_53"
        android:layout_marginLeft="@dimen/margin_1"
        android:layout_marginTop="@dimen/margin_2"
        android:src="@mipmap/icon_video_default_head" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-4dp"
        android:background="@drawable/shape_bg_ea5504_24"
        android:paddingLeft="@dimen/margin_4"
        android:paddingTop="@dimen/margin_2"
        android:paddingRight="@dimen/margin_4"
        android:paddingBottom="@dimen/margin_2"
        android:textColor="@color/white"
        android:textSize="9dp"
        android:text="直播中" />


</RelativeLayout>