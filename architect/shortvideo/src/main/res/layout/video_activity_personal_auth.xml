<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorF6F6F6"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/barheight"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_18"
            android:layout_marginBottom="@dimen/margin_15"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="实名认证"
            android:textColor="@color/color424242" />

    </RelativeLayout>

    <com.yuanbaogo.zui.scrollview.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_15"
                android:text="根据相关法律规定，开启直播需要经过实名认证"
                android:textColor="#444444"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_8"
                    android:text="您的认证信息元宝会严格保密！详情请查看"
                    android:textColor="@color/color666666"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:text="《元宝直播服务协议》"
                    android:textColor="@color/colorEA5504"
                    android:textSize="12dp" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_38"
                android:layout_marginRight="@dimen/margin_10">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="@color/color212121"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/et_name_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_32"
                    android:layout_toRightOf="@+id/name"
                    android:background="@null"
                    android:hint="请输入您的真实姓名"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/color424242"
                    android:textColorHint="@color/color999999"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/et_name_view"
                    android:layout_marginLeft="68dp"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@color/colorE4E4E4" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_38"
                android:layout_marginRight="@dimen/margin_10">

                <TextView
                    android:id="@+id/id_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证"
                    android:textColor="@color/color212121"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/et_id_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_toRightOf="@+id/id_card"
                    android:background="@null"
                    android:hint="请输入您的身份证号"
                    android:inputType="number"
                    android:digits="0123456789xX"
                    android:maxLength="18"
                    android:singleLine="true"
                    android:textColor="@color/color424242"
                    android:textColorHint="@color/color999999"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/et_id_card_view"
                    android:layout_marginLeft="68dp"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@color/colorE4E4E4" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_38"
                android:layout_marginRight="@dimen/margin_10">

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textColor="@color/color212121"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/et_phone_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_toRightOf="@+id/phone"
                    android:background="@null"
                    android:hint="请输入您的手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="@color/color424242"
                    android:textColorHint="@color/color999999"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/et_phone_view"
                    android:layout_marginLeft="68dp"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@color/colorE4E4E4" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_15"
                android:text="证件照"
                android:textColor="@color/color212121"
                android:textSize="16dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_10"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_photo_front"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="115dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_id_card" />

                <ImageView
                    android:id="@+id/iv_photo_back"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:maxHeight="115dp"
                    android:src="@mipmap/icon_id_card_back" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_5"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="身份证正面"
                    android:textColor="@color/color666666"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="身份证反面"
                    android:textColor="@color/color666666"
                    android:textSize="14dp" />

            </LinearLayout>

        </LinearLayout>
    </com.yuanbaogo.zui.scrollview.ObservableScrollView>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_49"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_50"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_30"
        android:background="@drawable/btn_state_enabled_ea5504"
        android:gravity="center"
        android:text="立即认证"
        android:textColor="@color/colorFFFFFF"
        android:textSize="@dimen/text_15" />

</LinearLayout>